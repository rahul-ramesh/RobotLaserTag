# The getch method can determine which key has been pressed
# by the user on the keyboard by accessing the system files
# It will then return the pressed key as a variable
def getch(): 
	fd = sys.stdin.fileno()
    old_settings = termios.tcgetattr(fd)
    try:
        tty.setraw(sys.stdin.fileno())
        ch = sys.stdin.read(1)
    finally:
        termios.tcsetattr(fd, termios.TCSADRAIN, old_settings)
    return ch


def main():

	#connect to server
	h = httplib2.Http(".cache")
	cmd_ip = "http://:80"
	

	while True:
		#get input
		charIn = getch()


		#parse input into command

		#if up 
		if(charIn == 'UP'):
			cmd = '145 1 244 1 244'

		#if down
		if(charIn == 'DOWN'):
			cmd = '145 254 12 254 12'
			
		#if left
		if(charIn == 'LEFT'):
			cmd = '145 1 244 254 12'
			
		#if right
		if(charIn == 'RIGHT'):
			cmd = '145 254 12 1 244'
			
		print cmd
		h.request(cmd_ip + cmd)

main

